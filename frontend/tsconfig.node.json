{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "@axe-core/playwright"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["vite.config.ts", "playwright.config.ts", "tests"]
}